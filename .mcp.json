{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/dev/workspace"
      ]
    },
    "network-fs": {
      "command": "/home/dev/workspace/mcp-servers/network-fs/.venv/bin/python3",
      "args": [
        "/home/dev/workspace/mcp-servers/network-fs/run_server.py"
      ]
    },
    "serena-enhanced": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/home/dev/workspace/serena",
        "serena-mcp-server",
        "--transport",
        "stdio"
      ]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_PERSONAL_ACCESS_TOKEN:-your_github_token_here}",
        "ghcr.io/github/github-mcp-server"
      ]
    },
    "code-linter": {
      "command": "/home/dev/workspace/mcp-servers/code-linter-mcp-server/venv/bin/python",
      "args": [
        "/home/dev/workspace/mcp-servers/code-linter-mcp-server/run_server.py"
      ],
      "env": {
        "PYTHONPATH": "/home/dev/workspace/mcp-servers/code-linter-mcp-server/src"
      }
    },
    "directory-polling": {
      "command": "python3",
      "args": [
        "/home/dev/workspace/homelab-gitops-auditor/mcp-enhanced-servers/directory-polling-system.py"
      ]
    },
    "home-assistant": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "HA_URL=http://192.168.1.155:8123",
        "-e",
        "HA_TOKEN=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiI5YTAyYzMxZTNkYjM0YmQxYTQ2YzNlMmJhZDExMjI3NCIsImlhdCI6MTc0NzUwODk4OSwiZXhwIjoyMDYyODY4OTg5fQ.BwOQMlSgBOi7kb2IwgSIK4KCRDe2mI-sJL496NUwHkE",
        "voska/hass-mcp"
      ]
    },
    "proxmox-mcp": {
      "command": "/home/dev/workspace/mcp-servers/proxmox-mcp-server/venv/bin/python",
      "args": [
        "/home/dev/workspace/mcp-servers/proxmox-mcp-server/src/proxmox_mcp/cli.py"
      ],
      "env": {
        "PROXMOX_CONFIG": "/home/dev/workspace/mcp-servers/proxmox-mcp-server/config.json"
      }
    },
    "truenas": {
      "command": "/home/dev/workspace/mcp-servers/truenas-mcp-server/venv/bin/python",
      "args": [
        "/home/dev/workspace/mcp-servers/truenas-mcp-server/run_server.py"
      ],
      "env": {
        "TRUENAS_API_URL": "http://192.168.1.100",
        "TRUENAS_API_KEY": "${TRUENAS_API_KEY:-your_truenas_api_key_here}",
        "PYTHONPATH": "/home/dev/workspace/mcp-servers/truenas-mcp-server/src"
      }
    },
    "wikijs-mcp": {
      "command": "/home/dev/workspace/mcp-servers/wikijs-mcp-server/venv/bin/python",
      "args": [
        "/home/dev/workspace/mcp-servers/wikijs-mcp-server/run_server.py",
        "/home/dev/workspace/mcp-servers/wikijs-mcp-server/config/wikijs_mcp_config.json"
      ],
      "env": {
        "PYTHONPATH": "/home/dev/workspace/mcp-servers/wikijs-mcp-server/src"
      }
    }
  }
}
