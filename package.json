{
  "name": "homelab-gitops-auditor",
  "version": "2.0.0-alpha",
  "description": "Homelab GitOps Auditor with Enhanced Dashboard, Pipeline Integration, and WikiJS Agent",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "cd api && npm run dev",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:phase2": "concurrently \"npm run dev:api:phase2\" \"npm run dev:dashboard:phase2\"",
    "dev:api:phase2": "cd api && NODE_ENV=development PHASE=2 npm run dev",
    "dev:dashboard:phase2": "cd dashboard && VITE_PHASE=2 npm run dev",
    "build": "npm run build:api && npm run build:dashboard",
    "build:api": "cd api && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "test": "npm run test:api && npm run test:dashboard && npm run test:unit && npm run test:integration",
    "test:api": "cd api && npm test",
    "test:dashboard": "cd dashboard && npm test",
    "test:unit": "jest --config tests/unit/jest.config.js",
    "test:integration": "jest --config tests/integration/jest.config.js",
    "lint": "npm run lint:api && npm run lint:dashboard",
    "lint:api": "cd api && npm run lint",
    "lint:dashboard": "cd dashboard && npm run lint",
    "install:all": "npm install && npm run install:api && npm run install:dashboard",
    "install:api": "cd api && npm install",
    "install:dashboard": "cd dashboard && npm install",
    "commit": "npx claude-auto-commit",
    "commit:dry": "npx claude-auto-commit --dry-run",
    "wikijs-processor": "node wikijs-content-processor-cli.js",
    "process": "node wikijs-content-processor-cli.js process",
    "batch": "node wikijs-content-processor-cli.js batch",
    "test-processor": "node wikijs-content-processor-cli.js test",
    "metrics": "node wikijs-content-processor-cli.js metrics",
    "discovery:start": "node scripts/wiki-discovery-cron.js start",
    "discovery:stop": "node scripts/wiki-discovery-cron.js stop",
    "discovery:status": "node scripts/wiki-discovery-cron.js status",
    "discovery:run-full": "node scripts/wiki-discovery-cron.js run-once daily-full-discovery",
    "discovery:test": "jest tests/discovery/discovery-system.test.js"
  },
  "keywords": ["gitops", "automation", "deployment", "wiki", "documentation", "discovery", "dashboard", "pipeline"],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.7.1",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "concurrently": "^9.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.4.5",
    "natural": "^6.10.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pidusage": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "claude-auto-commit": "^0.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
